<launch>
    <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

    <node pkg="nodelet" type="nodelet" name="velodyne_x_filter" args="load pcl/PassThrough pcl_manager" output="screen">
        <remap from="~input" to="/velodyne_points" />
        <rosparam>
            filter_field_name: x
            filter_limit_min: 0.00
            filter_limit_max: 0.25
            filter_limit_negative: True
        </rosparam>
    </node>

    <node pkg="nodelet" type="nodelet" name="velodyne_y_filter" args="load pcl/PassThrough pcl_manager" output="screen">
        <remap from="~input" to="/velodyne_x_filter/output" />
        <rosparam>
            filter_field_name: y
            filter_limit_min: -0.25
            filter_limit_max:  0.25
            filter_limit_negative: False
        </rosparam>
    </node>

    <node pkg="nodelet" type="nodelet" name="velodyne_z_filter" args="load pcl/PassThrough pcl_manager" output="screen">
        <remap from="~input" to="/velodyne_y_filter/output" />
        <rosparam>
            filter_field_name: z
            filter_limit_min: -0.10
            filter_limit_max:  0.10
            filter_limit_negative: False
        </rosparam>
    </node>

    <node pkg="nodelet" type="nodelet" name="velodyne_intensity_filter" args="load pcl/PassThrough pcl_manager" output="screen">
        <remap from="~input" to="/velodyne_z_filter/output" />
        <remap from="~output" to="/velodyne_camera_filter" />
        <rosparam>
            filter_field_name: intensity
            filter_limit_min: 90
            filter_limit_max: 1000
            filter_limit_negative: False
        </rosparam>
    </node>
</launch>
